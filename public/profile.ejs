<% include ../public/partials/header %>

<div class='page-content'>
  <div class='page-heading divider'>
    <%= auth.username %> #<%= auth.battletag %>
  </div>
  <div class='page-info'>
    <div class='profile-table'>
      <div class='profile-block'>
        <div class='profile-block-label'>Doubloons</div>
        <div class='profile-block-value'><%= auth.doubloons %></div>
      </div>
      <div class='profile-block'>
        <div class='profile-block-label'>Uploaded</div>
        <div class='profile-block-value'><%= params.replaysUploaded %> Games</div>
      </div>
      <div class='profile-block'>
        <div class='profile-block-label'>Found In</div>
        <div class='profile-block-value'><%= params.replaysIn %> Games</div>
      </div>
      <div class='profile-block'>
        <div class='profile-block-label'>ELO Rating</div>
        <div class='profile-block-value'>-a billion</div>
      </div>
    </div>
  </div>

  <div class='page-heading'>
    Recent Games
  </div>
  <div id='recent-replays-table' class='full-width-table'>
    <div class='labels row'>
      <div class='item replayBuild'>Build</div>
      <div class='item replayGameType'>Gametype</div>
      <div class='item replayResult'>Result</div>
      <div class='item replayMapName'>Map</div>
      <div class='item replayHero'>Hero</div>
      <div class='item replayGameLength'>Length</div>
      <div class='item replayTimePlayed'>Time</div>
    </div>
    <div id='recent-replays-list'></div>
  </div>
</div>

<% if(locals.params){ %>
  <script>
    var params = <%- JSON.stringify(params) %>;
  </script>
<% } %>
<script type='text/javascript' src='/js/profile.js'></script>

<% include ../public/partials/footer %>
