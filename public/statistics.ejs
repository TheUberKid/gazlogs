<% include ../public/partials/header %>

<div class='page-content'>
  <div class='page-heading divider'>
    Global Statistics
    <span class='right' id='date'></span>
  </div>

  <div class='stat-table'>
    <div class='dropdown'>
      <span class='label'>GameType: </span>
      <div class='triangle'></div>
      <span class='value' id='gametype'></span>
      <div class='menu'>
        <div class='item gametype' data-gametype=6>Unranked Draft</div>
        <div class='item gametype' data-gametype=7>Quick Match</div>
        <div class='item gametype' data-gametype=8>Hero League</div>
        <div class='item gametype' data-gametype=9>Team League</div>
      </div>
    </div>
    <div class='dropdown'>
      <span class='label'>Build: </span>
      <div class='triangle'></div>
      <span class='value' id='build'></span>
      <div class='menu' id='build-list'></div>
    </div>
    <div class='stat'>
      <span class='label'>Last Updated: </span>
      <span class='value' id='updated'>-/-</span>
    </div>
  </div>

  <div id='statistics-table' class='full-width-table normal'>
    <div class='labels row'>
      <div class='item statHero sort' data-sort='hero'><span>Hero</span></div>
      <div class='item statWinRate sort active' data-sort='winrate'><span>Win Rate</span></div>
      <div class='item statPickRate sort' data-sort='pickrate'><span>Pick Rate</span></div>
      <div class='item statBanRate sort' data-sort='banrate'><span>Ban Rate</span></div>
      <div class='item statGamesWon sort' data-sort='won'><span>Won</span></div>
      <div class='item statGamesPicked sort' data-sort='picked'><span>Picked</span></div>
      <div class='item statGamesBanned sort' data-sort='banned'><span>Banned</span></div>
    </div>
    <div id='statistics'></div>
  </div>
</div>

<div id='fixed-labels' class='full-width-table normal'>
  <div class='labels row'>
    <div class='item statHero sort' data-sort='hero'><span>Hero</span></div>
    <div class='item statWinRate sort active' data-sort='winrate'><span>Win Rate</span></div>
    <div class='item statPickRate sort' data-sort='pickrate'><span>Pick Rate</span></div>
    <div class='item statBanRate sort' data-sort='banrate'><span>Ban Rate</span></div>
    <div class='item statGamesWon sort' data-sort='won'><span>Won</span></div>
    <div class='item statGamesPicked sort' data-sort='picked'><span>Picked</span></div>
    <div class='item statGamesBanned sort' data-sort='banned'><span>Banned</span></div>
  </div>
</div>

<% if(locals.params){ %>
  <script>
    var params = <%- JSON.stringify(params) %>;
  </script>
<% } %>

<script type='text/javascript' src='/js/dictionary.js'></script>
<script type='text/javascript' src='/js/statistics.js'></script>

<% include ../public/partials/footer %>
